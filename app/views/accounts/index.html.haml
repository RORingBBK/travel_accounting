.container
	.row
		.col-xs-12
			.box
				.box-body
					%table#account-table.table.table-hover.table-striped
						%thead
							%tr
								%th Id
								%th Code
							
								%th Name
								%th Description
								%th Debit
								%th Credit
								
						%tbody
							- @accounts.each do |a|
								%tr 
									%td= a.id
									%td= best_in_place a, :code
									%td= best_in_place a, :name
									%td= best_in_place a, :description
									%td= best_in_place a, :debit, :display_as => :debit_precision 
									%td= best_in_place a, :credit, :display_as => :credit_precision
								
								

                   